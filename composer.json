{
    "name": "jasny/auth",
    "description": "Authentication and authorization",
    "keywords": [
        "auth"
    ],
    "homepage": "https://www.jasny.net/auth",
    "license": "MIT",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "improved/iterable": "^0.1.4",
        "jasny/immutable": "^2.1",
        "nesbot/carbon": "^2.27",
        "psr/event-dispatcher": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.1"
    },
    "conflict": {
        "hashids/hashids": "< 2.0",
        "lcobucci/jwt": "< 3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "hashids/hashids": "^2.0 | ^3.0 | ^4.0",
        "jasny/php-code-quality": "~2.7.0",
        "lcobucci/jwt": "^3.4 | ^4.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Jasny\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\Auth\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "phpstan analyse",
            "phpunit --testdox --colors=always",
            "phpcs -p src"
        ]
    },
    "support": {
        "issues": "https://github.com/jasny/auth/issues",
        "source": "https://github.com/jasny/auth"
    }
}
